{
  "name": "release",
  "version": "1.0.0",
  "description": "action to release akashic oss",
  "private": true,
  "scripts": {
    "build": "npm run bundle && npm run format",
    "bundle": "ncc build src/index.ts -o dist -m",
    "test": "npm run test:jest && npm run lint",
    "test:jest": "jest",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix"
  },
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/github": "^4.0.0",
    "@jsdevtools/npm-publish": "^1.4.3"
  },
  "devDependencies": {
    "@akashic/eslint-config": "^0.1.2",
    "@types/jest": "^26.0.22",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@vercel/ncc": "^0.27.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.2",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "./src/**/*.ts",
      "!./src/__tests__/**/*.ts"
    ],
    "coverageReporters": [
      "lcov"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.jest.json"
      }
    },
    "testMatch": [
      "<rootDir>/src/__tests__/*.spec.ts"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "printWidth": 140,
    "singleQuote": false,
    "tabWidth": 4,
    "trailingComma": "none",
    "useTabs": true
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "commonjs": true
    },
    "extends": [
      "@akashic/eslint-config",
      "prettier"
    ],
    "parserOptions": {
      "project": "tsconfig.eslint.json",
      "sourceType": "module"
    },
    "ignorePatterns": [
      "*.js",
      "**/*.d.ts"
    ]
  }
}
